<div class="container">
  <p class="notice"><%= notice %></p>

  <h1>Flat Explorer 🏠</h1>

  <div id="flats">
    <% @flats.each do |flat| %>
      <%= render flat %>
      <p>
        <%= link_to "Show this flat", flat, class: "button button--primary" %>
      </p>
    <% end %>
  </div>

<%= link_to "New flat", new_flat_path, style: "background-color: #8bc34a; color: #fff; border: none; border-radius: 5px; padding: 10px 15px; font-size: 16px; text-decoration: none; cursor: pointer; transition: background-color 0.3s ease;" %>

  <div class="map-container"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
